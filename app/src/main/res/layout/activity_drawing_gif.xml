        android:layout_centerHorizontal="true" />

    <com.github.gcacace.signaturepad.views.SignaturePad
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gifLayoutPad" />

</RelativeLayout>